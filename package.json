{
  "name": "apogeeze",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "build": "rm -rf dist && swc ./src/ -d dist",
    "start": "node --env-file=.env dist/src/index.js",
    "start:docker": "npm ci && npm run build && node dist/src/index.js",
    "seed:docker": "npm ci && npm run build && npx knex migrate:latest && npx knex seed:run",
    "watch": "watchy --no-init-spawn --debounce 1 -w src -- docker-compose restart backend",
    "test": "jest"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "knex": "^3.1.0",
    "pg": "^8.11.3",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.9",
    "@swc/core": "^1.4.0",
    "@tsconfig/node20": "^20.1.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "watchy": "^0.10.1"
  }
}
